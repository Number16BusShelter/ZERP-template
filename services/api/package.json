{
  "name": "@zerp/api",
  "version": "0.0.1",
  "private": true,
  "description": "ZERP API service.",
  "engines": {
    "node": ">=20.18"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./bin",
    "./dist",
    "./build"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "ts-node -r tsconfig-paths/register index.ts",
    "dev": "nodemon --watch src --exec \"ts-node -r tsconfig-paths/register index.ts\"",
    "test": "mocha --esm -r ts-node/register ./tests",
    "start:local": "ts-node -r tsconfig-paths/register index.ts",
    "prod": "node ./dist/index.js",
    "start:prod": "node ./dist/index.js",
    "cli": "ts-node -r tsconfig-paths/register ./src/scripts/run-script.ts",
    "generate-swagger": "ts-node -r tsconfig-paths/register src/scripts/generate-swagger.ts",
    "generate-sdk": "pnpm generate-swagger && swagger-codegen generate -l typescript-axios -i ./docs/swagger.json -o ../../packages/sdk-api",
    "generate-api-token": "ts-node -r tsconfig-paths/register ./src/scripts/generate-api-token.ts",
    "typeorm": "pnpm run --filter @zerp/db typeorm",
    "script:migrate": "node ./d   ist/src/scripts/migrate.js",
    "orm:migrations:generate": "pnpm run typeorm migration:generate ./src/migration/CSCRM",
    "orm:migrations:run": "pnpm run typeorm migration:run",
    "orm:migrations:create": "typeorm-ts-node -r tsconfig-paths/register -esm migration:create ./src/migration/CSCRM",
    "orm:migrations:revert": "pnpm run typeorm migration:revert",
    "orm-js:migrations:run": "typeorm -d ./dist/data-source.js migration:run",
    "orm-js:migrations:revert": "typeorm -d ./dist/data-source.js migration:revert"
  },
  "author": "Number16BusShelter",
  "license": "ISC",
  "keywords": [],
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@telegram-apps/sdk": "^3.7.1",
    "@ton/core": "^0.60.1",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.2.1",
    "@tonconnect/protocol": "^2.2.7",
    "@tonconnect/sdk": "^3.1.0",
    "@zerp/db": "workspace:*",
    "@zerp/errors": "workspace:*",
    "@zerp/global-configs": "workspace:*",
    "@zerp/shared-modules": "workspace:*",
    "@zerp/types": "workspace:*",
    "@zerp/utils": "workspace:*",
    "@zerp/zod-schemas": "workspace:*",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-jsdoc-swagger": "^1.8.0",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "express-ws": "^5.0.2",
    "helmet": "^8.1.0",
    "inquirer": "^12.5.2",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "nacl": "^0.1.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redis": "^4.7.0",
    "shelljs": "^0.9.2",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tweetnacl": "^1.0.3",
    "typeorm": "^0.3.22",
    "uuid": "^11.1.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.1",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/express-session": "^1.18.1",
    "@types/express-ws": "^3.0.5",
    "@types/jsonwebtoken": "~9.0.9",
    "@types/mocha": "^10.0.10",
    "@types/passport": "~1.0.17",
    "@types/passport-jwt": "~4.0.1",
    "@types/passport-local": "~1.0.38",
    "@types/pg": "^8.11.13",
    "@types/shelljs": "^0.8.15",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "chai": "^5.2.0",
    "mocha": "^11.2.2",
    "socket.io-client": "^4.8.1",
    "swagger-autogen": "^2.23.7",
    "swagger-typescript-api": "^13.1.1"
  }
}
