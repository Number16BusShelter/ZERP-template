{
  "extends": "../../tsconfig.base.json",
  "declaration": true,
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,
    "rootDirs": [
      "./"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./config/**/*",
    "./**/*.d.ts",
    "./scripts",
    "./index.ts"
  ],
  "exclude": [
    "tmp",
    "logs",
    "node_modules",
    "tests",
    "dist"
  ]
}
